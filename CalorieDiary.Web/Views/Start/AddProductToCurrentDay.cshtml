@model CalorieDiary.Application.ViewModels.Start.ProductToAddVm

@{
    ViewData["Title"] = "AddProductToCurrentDay";
}

<h1>Add eated product to day</h1>

@*<h4>ProductToAddVm</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProductToCurrentDay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="WhenEated" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" readonly="" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EatedGramsProduct" class="control-label"></label>
                <input asp-for="EatedGramsProduct" class="form-control" />
                <span asp-validation-for="EatedGramsProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="EatedProductId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DaysId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
     <button type="button" class="btn btn-primary" value="Create" onclick="location.href='@Url.Action("Index", "Start")'">Management center</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
