@model CalorieDiary.Application.ViewModels.Calculator.CalculateCaloricDemandVm

@{
    ViewData["Title"] = "Calculator";
}

<h1>Calculator</h1>

<h4>CalculateCaloricDemandVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calculator">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DailyRequirementKcal" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DailyRequirementFat" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DailyRequirementProtein" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="DailyRequirementCarbo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sex" class="control-label"></label>
                <select asp-for="Sex" class="custom-select">
                    <option selected>Open this select menu</option>
                    <option value="Man">Man</option>
                    <option value="Woman">Woman</option>
                </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity" class="control-label"></label>
                 <select asp-for="Activity" class="custom-select">
                    <option selected>Open this select menu</option>
                    <option value="Lackofphysicalactivity">Professional inactivity, sick, lying</option>
                    <option value="Lightactivity">An office worker whose activity is related solely to household duties</option>
                    <option value="Averageactivity">Office worker, training 2-3 times a week for a minimum of one hour</option>
                    <option value="Highactivity">Office worker, training 3-4 times a week for a minimum of one hour</option>
                    <option value="Veryhighphysicalactivity">A professional athlete who trains a minimum of 6 hours a week or a hard physical worker</option>
                </select>
                <span asp-validation-for="Activity" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <label asp-for="Goal" class="control-label"></label>
                <input asp-for="Goal" class="form-control" />
                <span asp-validation-for="Goal" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CreatedTime" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
     <button type="button" class="btn btn-primary" value="Create" onclick="location.href='@Url.Action("Index", "Start")'">Management center</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
